<% content_for :title_bar do %>
  <% if policy(Project).new? %>
    <%= link_to t('projects.new project'), new_project_path, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<div id="projects" class="projects-list">
  <div class="row item">
    <div class="col-md-12">
      <% unless @projects.empty? %>

        <div class="col-md-6">
          <% unless Activity.grouped_activities(@projects, 1.week.ago).empty? %>
            <ul class="timeline">
              <%= render 'activities_group', activities_group: Activity.grouped_activities(@projects, 1.week.ago) %>
            </ul>
          <% else %>
            <div class="simple-alert">
              <i class="mi alert-icon">error_outline</i>
              <h4 class="text-center"><%= t('projects.no_recent_activity') %></h4>
            </div>
          <% end %>
        </div>

        <div class="col-md-6 projects">
          <%= render @projects %>
        </div>

      <% else %>
        <div class="col-md-8 col-md-offset-2">
          <div class="simple-alert">
            <i class="mi alert-icon">error_outline</i>
            <h4 class="text-center">
              <%= t('projects.no_projects_found') %> <br>
              <%= link_to t('projects.new project'), new_project_path, class: 'btn btn-link unstyled-link' %>
            </h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
