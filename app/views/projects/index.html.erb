<% content_for :title_bar do %>
  <h1><%= t('.listing projects') %></h1>
<%= link_to t('projects.new project'), new_project_path, class: 'btn btn-primary' %>
<% end %>

<div id="projects" class="projects-list">
  <div class="row item">
    <div class="col-md-12">
      <div class="col-md-4">
        <ul>
        <% @activities_group.each do |date_group| %>
          <li class="activities_date"><%= date_group.first %></li>

          <% date_group.last.each do |project_group| %>
            <li class="activities_project"><%= @projects.find { |p| p.id == project_group.first }.try(:name) %></li>

            <% project_group.last.each do |activities| %>
              <% activities.last.each do |activity| %>
                <li class="activities_subject"><%= activity.try(:describe) %></li>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
        </ul>
      </div>

      <div class="col-md-8">
          <%= render @projects %>
      </div>
    </div>
  </div>
</div>

