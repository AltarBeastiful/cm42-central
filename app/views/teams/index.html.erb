<% content_for :title_bar do %>
  <h1 class="top-bar-title"><%= t('teams.switch') %></h1>
<% end %>

<div class="col-md-8 col-md-offset-2">
  <div class="row">

    <div class="col-md-12 page-header">
      <h4 class="page-header-title darkgrey-2">
        <i class="mi md-20">dashboard</i> <%= t('teams.select') %>
        <%= link_to t('teams.create'), new_team_path, class: "btn btn-link pull-right unstyled-link" %>
      </h4>
    </div>

    <% if @teams.size > 0 %>
      <% @teams.each_with_index do |team, index| %>
        <%= form_tag(switch_teams_path, method: :get, :id => team.id) do -%>
          <div class="col-md-4 col-xs-6">
            <%= link_to "#", class: 'unstyled-link',:data => {:'form-submit' => ""} do %>
              <div class="panel panel-default card scaleIn-animation clickable" style="animation-delay: <%= index.to_f * 0.15 %>s">

                <div class="panel-heading">
                  <%= team.name %>
                </div>

                <div class="panel-body">
                  <div class="col-md-6 counter">
                    <span class="counter-description"><%= t('card.members') %></span>
                    <span class="counter-value"><%= team.users.size %> </span>
                  </div>

                  <div class="col-md-6 counter">
                    <span class="counter-description"><%= t('card.projects')%></span>
                    <span class="counter-value"><%= team.projects.size %> </span>
                  </div>
                </div>

                  <%= hidden_field_tag :team_slug, team.slug %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <div class="simple-alert">
        <i class="mi">error_outline</i>
        <h4 class="text-center darkgrey-2"><%= t('teams.no_teams_found') %></h4>
      </div>
    <% end %>
</div>
