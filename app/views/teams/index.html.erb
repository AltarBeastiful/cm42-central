<% content_for :title_bar do %>
  <h1 class="top-bar-title"><%= t('teams.switch') %></h1>
<% end %>

<div class="col-md-8 col-md-offset-2">
  <div class="page-header">
    <h4 class="page-header-title darkgrey-2">
      <i class="mi md-20">dashboard</i> <%= t('teams.select') %>
      <%= link_to t('teams.create'), new_team_path, class: "btn btn-link pull-right unstyled-link" %>
    </h4>
  </div>

  <% @teams.each_with_index do |team, index| %>
    <%= link_to switch_teams_path(team_slug: team.slug), class: 'card-link' do %>
      <div class="col-md-4 col-xs-6">
        <div class="panel panel-default card clickable scaleIn-animation" style="animation-delay: <%= index* 0.15 %>s" data-form-submit>

          <div class="panel-heading">
            <%= team.name %>
          </div>

          <div class="panel-body">
            <div class="col-md-6 counter">
              <span class="counter-description"><%= User.model_name.human(count: 2) %></span>
              <span class="counter-value"><%= team.users.size %> </span>
            </div>

            <div class="col-md-6 counter">
              <span class="counter-description"><%= Project.model_name.human(count: 2) %></span>
              <span class="counter-value"><%= team.projects.size %> </span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
